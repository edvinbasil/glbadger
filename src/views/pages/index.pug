extends ../layouts/main
block content
  .wrapper(style="display: flex; min-height: 100vh; width: 100%; justify-content:center; align-items: center; flex-direction: column")
    h1.custom Get Started
    form(action='/gitlab' method='post')
      fieldset
        label(for='link') Link to your project
        input#link(type='text' name='link' placeholder='https://gitlab.com/example/project')
        input.button.custom(type='submit' value='Send')
